{
  "expo": {
    "name": "Manarat Al-Muslim",
    "slug": "TasbeehApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon2.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "remote-notification"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "icon": "./assets/icon2.png",
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon2.png",
        "backgroundColor": "#509272"
      },
      "icon": "./assets/icon2.png",
      "permissions": [
        "NOTIFICATIONS",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK",
        "FOREGROUND_SERVICE",
        "SYSTEM_ALERT_WINDOW"
      ],
      "package": "com.manaratalmuslim",
      "useNextNotificationsApi": true,
      "runtimeVersion": "1.0.0",
      "config": {
        "largeHeap": true
      }
    },
    "web": {
      "favicon": "./assets/icon2.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon1.png",
          "color": "#ffffff",
          "sounds": [ 
            "./assets/adhan.mp3",
            "./assets/madinah_adhan.mp3",
            "./assets/makkah_adhan.mp3",
            "./assets/long_beep.mp3"
          ],
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "Prayer Times",
          "androidBadgeIconType": "large",
          "androidImportance": "max",
          "androidShowWhen": true,
          "androidAllowWhileIdle": true,
          "androidAllowInForeground": true,
          "androidPriority": "max"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-background-fetch",
        {
          "backgroundFetch": true,
          "startOnBoot": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0871aeac-9dd1-4614-b6e6-7614e6b8cade"
      }
    },
    "fonts": [
      {
        "asset": "./assets/fonts/Scheherazade-Regular.ttf",
        "family": "Scheherazade"
      },
      {
        "asset": "assets/fonts/NotoKufiArabic-Regular.ttf",
        "family": "NotoKufiArabic"
      }
    ],
    "assetBundlePatterns": [
      "**/*",
      "assets/quran-images/*"
    ],
    "updates": {
      "url": "https://u.expo.dev/0871aeac-9dd1-4614-b6e6-7614e6b8cade"
    }
  }
}
