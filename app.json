{
  "expo": {
    "name": "TasbeehApp",
    "slug": "TasbeehApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      },
      "icon": "./assets/icon.png",
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#509272"
      },
      "icon": "./assets/icon.png",
      "permissions": [
        "NOTIFICATIONS",
        "android.permission.VIBRATE",
        "android.permission.INTERNET",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "FOREGROUND_SERVICE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.WAKE_LOCK",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.omer310.TasbeehApp",
      "useNextNotificationsApi": true,
      "runtimeVersion": "1.0.0",
      "config": {
        "largeHeap": true
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon1.png",
          "color": "#ffffff",
          "sounds": [
            "./assets/adhan.mp3",
            "./assets/madinah_adhan.mp3",
            "./assets/makkah_adhan.mp3"
          ]
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-background-fetch",
        {
          "backgroundFetch": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0871aeac-9dd1-4614-b6e6-7614e6b8cade"
      }
    },
    "fonts": [
      {
        "asset": "./assets/fonts/Scheherazade-Regular.ttf",
        "family": "Scheherazade"
      }
    ],
    "assetBundlePatterns": [
      "**/*",
      "assets/quran-images/*"
    ],
    "updates": {
      "url": "https://u.expo.dev/0871aeac-9dd1-4614-b6e6-7614e6b8cade"
    }
  }
}
